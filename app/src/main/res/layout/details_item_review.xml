<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details_item_layout"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="?android:attr/selectableItemBackground">
    <FrameLayout
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:paddingTop="18dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/details_item_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_rate_review_black_36dp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/details_item_review_stars"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:scaleType="fitStart" />
        <TextView
            android:id="@+id/details_item_secondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="Reviews from Yelp" />
    </LinearLayout>
</LinearLayout>